<div class="showField">
	Name: <%= @boat.name %><br>
	Location: <%= @boat.location %><br>
	Container Capacity: <%= @boat.container %><br>
	<%=link_to 'Edit', edit_boat_path(params[:id]) %>
	<%= link_to 'Delete',  { action: :destroy, id: @boat.id }, method: :delete, data: { confirm: 'Are you sure?' } %>
	<%= image_tag "http://maps.googleapis.com/maps/api/staticmap?center=#{@boat.latitude},#{@boat.longitude}&markers=#{@boat.latitude},#{@boat.longitude}&zoom=7&size=480x320&key=AIzaSyA4BHW3txEdqfxzdTlPwaHsYRSZbfeIcd8",
              class: 'img-fluid img-rounded', alt: "#{@boat.location} on the map", id:"map" %>


</div>